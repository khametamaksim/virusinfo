<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/gilroys"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:text="@string/statistics"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="20sp"
                android:text="@string/total_cases"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="10sp"
                android:text="@string/cases_number"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="20sp"
                android:text="@string/total_deaths"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="10sp"
                android:text="@string/deaths_number"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="20sp"
                android:text="@string/total_recovered"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:paddingTop="10sp"
                android:paddingBottom="75sp"
                android:text="@string/recovered_number"
                android:textAlignment="center"
                android:textColor="#00FF00"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:elevation="2dp"
                android:fontFamily="@font/gilroys"
                android:keepScreenOn="false"
                android:onClick="countriesTable"
                android:padding="10sp"
                android:text="@string/view_by_country"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>