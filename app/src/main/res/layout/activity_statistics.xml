<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="32dp"
                android:fontFamily="@font/gilroys"
                android:paddingStart="70dp"
                android:paddingEnd="70dp"
                android:text="@string/statisticsof"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:paddingTop="35sp"
                android:paddingBottom="15dp"
                android:text="@string/total_cases"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="10sp"
                android:text="@string/cases_number"
                android:textAlignment="center"
                android:background="@color/yel"
                android:textColor="@color/white"
                android:textSize="25sp" >
            </TextView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:paddingTop="35sp"
                android:paddingBottom="15dp"
                android:text="@string/total_deaths"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="10sp"
                android:text="@string/deaths_number"
                android:textAlignment="center"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:paddingTop="35sp"
                android:paddingBottom="15dp"
                android:text="@string/total_recovered"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroys"
                android:padding="10sp"
                android:text="@string/recovered_number"
                android:textAlignment="center"
                android:background="@color/greendark"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:backgroundTint="#ffffff"
                android:elevation="3dp"
                android:translationY="9dp"
                android:translationZ="9dp"
                android:fontFamily="@font/gilroys"
                android:onClick="countriesTable"
                android:stateListAnimator="@null"
                android:padding="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textAllCaps="false"
                android:text="@string/view_by_country"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="55dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>